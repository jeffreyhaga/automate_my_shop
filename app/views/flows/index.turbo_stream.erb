<turbo-frame id="flows">
  <div class="row mt-3">
    <% if @flows.any? %>
      <% @flows.each do |flow| %>
        <div class="col-sm-4 mb-3">
          <div class="card h-100">
            <%= link_to flow_path(flow), class: "stretched-link text-decoration-none text-dark" do %>
              <div class="card-body">
                <%= render flow %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No results found. Search again or go back home.</p>
    <% end %>
  </div>
</turbo-frame>