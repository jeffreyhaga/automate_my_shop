<div class="d-flex flex-column justify-content-center align-items-center">
  <div class="mb-3">
    <p style="color: green"><%= notice %></p>
  </div>

    <div class="col-sm-6 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= @flow.title %></h5>
                <p class="card-text"><%= @flow.description %></p>
                <p class="card-text btn btn-primary me-2">
                    <%= link_to 'Download File', rails_blob_path(@flow.file, disposition: 'attachment'), class: "text-white no-underline" %>
                </p>
                <div class="d-flex">
                    <%= link_to "Back", flows_path, class: "btn btn-secondary me-2" %>
                    <% if @flow.user == current_user %>
                        <%= link_to "Edit", edit_flow_path(@flow), class: "btn btn-primary me-2" %>
                        <%= button_to "Delete", @flow, method: :delete, class: "btn btn-danger" %>
                    <% end %>
                </div>

            </div>
        </div>
    </div>
</div>
